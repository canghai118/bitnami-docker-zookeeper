FROM docker.io/bitnami/minideb:buster
LABEL maintainer "Bitnami <containers@bitnami.com>"

ARG TARGETOS
ARG TARGETARCH
ARG TARGETVARIANT

ENV HOME="/" \
    OS_ARCH="$TARGETARCH" \
    OS_FLAVOUR="debian-10" \
    OS_NAME="$TARGETOS" \
    PATH="/opt/bitnami/common/bin:/opt/bitnami/java/bin:/opt/bitnami/zookeeper/bin:$PATH"

COPY prebuildfs /
# Install required system packages and dependencies
RUN install_packages acl ca-certificates curl gzip libc6 netcat procps tar zlib1g

# 脚本直接使用amd64版本
RUN OS_ARCH=amd64 . /opt/bitnami/scripts/libcomponent.sh && component_unpack "wait-for-port" "1.0.1-10" 
# 从APT安装java和gosu
RUN install_packages openjdk-11-jdk-headless gosu
# RUN . /opt/bitnami/scripts/libcomponent.sh && component_unpack "java" "11.0.14-7" 
# RUN . /opt/bitnami/scripts/libcomponent.sh && component_unpack "gosu" "1.14.0-7"

# zookeeper使用amd64版本
RUN OS_ARCH=amd64 . /opt/bitnami/scripts/libcomponent.sh && component_unpack "zookeeper" "3.7.0-11"
RUN apt-get update && apt-get upgrade -y && \
    rm -r /var/lib/apt/lists /var/cache/apt/archives
RUN chmod g+rwX /opt/bitnami
RUN ln -s /opt/bitnami/scripts/zookeeper/entrypoint.sh /entrypoint.sh
RUN ln -s /opt/bitnami/scripts/zookeeper/run.sh /run.sh

COPY rootfs /
RUN /opt/bitnami/scripts/zookeeper/postunpack.sh
ENV APP_VERSION="3.7.0" \
    BITNAMI_APP_NAME="zookeeper" \
    BITNAMI_IMAGE_VERSION="3.7.0-debian-10-r333"

EXPOSE 2181 2888 3888 8080

USER 1001
ENTRYPOINT [ "/opt/bitnami/scripts/zookeeper/entrypoint.sh" ]
CMD [ "/opt/bitnami/scripts/zookeeper/run.sh" ]
